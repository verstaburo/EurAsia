mixin slider(pagination, buttons)
  +b.slider&attributes(attributes).swiper-container.js-slider
    .swiper-wrapper
      block
    if pagination
      +e.dots
        +e.dot
    if buttons
      +e.button._prev
        +icon('arrow-large').__icon
      +e.button._next
        +icon('arrow-large').__icon

mixin slide(addClass)
  +e(class= "slide" + addClass + " swiper-slide")&attributes(attributes)
    block
